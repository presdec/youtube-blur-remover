{
  "manifest_version": 3,
  "name": "YouTube Blur & Glow Remover",
  "version": "3.0.1",
  "description": "Remove YouTube's animated blur effects and ambient glow. 100% free & open source.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Blur Remover"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
